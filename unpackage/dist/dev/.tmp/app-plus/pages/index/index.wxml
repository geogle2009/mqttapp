<view class="warp"><view class="text-area"><text class="title">{{title}}</text></view><uni-section vue-id="1" title="动态加载" type="line" bind:__l="__l"></uni-section><view class="example-body"><block wx:if="{{dynamicList.length!==0}}"><view class="grid-dynamic-box"><uni-grid vue-id="2" column="{{3}}" highlight="{{true}}" data-event-opts="{{[['^change',[['change']]]]}}" bind:change="__e" bind:__l="__l" vue-slots="{{['default']}}"><block wx:for="{{dynamicList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><uni-grid-item vue-id="{{('3-'+index)+','+('2')}}" index="{{index}}" bind:__l="__l" vue-slots="{{['default']}}"><view class="grid-item-box" style="{{'background-color:'+(item.color)+';'}}"><image class="image" src="{{item.url}}" mode="aspectFill"></image><text class="text">{{item.text}}</text></view></uni-grid-item></block></uni-grid></view></block><button type="primary" data-event-opts="{{[['tap',[['add',['$event']]]]]}}" bindtap="__e">点击添加一个宫格</button><block wx:if="{{dynamicList.length!==0}}"><button style="margin-top:15px;" type="primary" data-event-opts="{{[['tap',[['del',['$event']]]]]}}" bindtap="__e">点击删除一个宫格</button></block></view></view>